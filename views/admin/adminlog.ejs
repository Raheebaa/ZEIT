<%- include('header') -%>

<section class="vh-100">
  <div class="container-fluid h-custom" style="padding-top: 69px;">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5 text-center">
        <div class="image-container" style="display: flex; align-items: center; margin-bottom: 10px;">
          <div class="image-wrapper" style="margin-left: 220px;">
            <img src="/assets/Z.jpg" id="custom-image" class="img-fluid" alt="Sample image" style="width: 50px;">
          </div>
          <div class="d-flex align-items-center ml-2">
            <span class="h1 fw-bold mb-0">ZEIT</span>
          </div>
        </div>
        
        <img src="/assets/wtch.jpeg" class="img-fluid" alt="Sample image" style="width: 505px; height: 505px; margin-bottom: 20px;">
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0 text-center">
        <div class="card">
          <div class="card-body py-5 px-md-5">
            <form id="adminlogform" action="admin/adminlog" method="post" autocomplete="off">
              
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="d-flex align-items-center justify-content-center mb-3 pb-1">
                    <span class="h1 fw-bold mb-0">LOGIN</span >
                  </div>
                </div>
              </div>

              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="email" id="form3Example3" value="zeit@gmail.com" class="form-control" name="email" required/>
                <label class="form-label" for="form3Example3">Email address</label autofocus>
                <div class="error-message"></div> 
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <input type="password" id="form3Example4" class="form-control" name="password" required/>
                <label class="form-label" for="form3Example4">Password</label>
                <div class="error-message"></div> 
              </div>
             
              <button  class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;" type="submit">
                <i class="fab fa-google-f me-2" style="width: 100%;"></i>LOGIN
              </button>
              <!-- Checkbox -->
              <!-- <p class="small mb-5 pb-lg-2">
                <a class="text-muted" href="#!" style="font-weight: bold; color: rgb(86, 86, 212) !important;">Forgot password?</a>
              </p>
               -->
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('footer') -%>
