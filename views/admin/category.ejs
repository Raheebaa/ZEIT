<%- include('header') -%>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/admin/css/dashboard.css" />
    <title>Products</title>
</head>

<body>
    <%- include('header') -%>

       
    <div class="col-md-3 col-lg-2 sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="/admin/admindash">
                    <i class="fa fa-home"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/banner">
                    <i class="fa fa-list"></i> Banner
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/product">
                    <i class="fa fa-product-hunt"></i> Products
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/category">
                    <i class="fa fa-list"></i> Category
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/category">
                    <i class="fa fa-list"></i> Brands
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/customers">
                    <i class="fa fa-users"></i> Customers
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/orders">
                    <i class="fa fa-bars"></i> Orders
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/coupon">
                    <i class="fa fa-bars"></i> Coupon
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/admin/sales">
                    <i class="fa fa-line-chart"></i> Sales
                </a>
            </li>
            <a class="list-group-item list-group-item-action bg-transparent second-text fw-bold"
                data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false"
                aria-controls="collapseExample"><i class="fas fa-project-diagram me-2"></i>offers</a>
            <div class="collapse mx-4 text" id="collapseExample">
                <div class="offerLink"><a href="/admin/categoryOffers"> category offers</a><i
                        class="fas fa-arrow-right"></i></div>
        
            </div>
            <li class="nav-item">
                <a class="nav-link" href="/admin/logout">
                    <i class="fa fa-sign-out"></i> Logout
                </a>
            </li>

        </ul>
    </div>
    <%- include('footer') -%>

            <!-- Right side (Table) -->
            <div class="col-md-9" style="margin-left: auto; margin-right: 100px;">
                <div class="container">
                    <div class="nav w-100 d-flex justify-content-end">
                        <a href="/admin/addcategory" class="btn btn-primary btn-md active btn-add-category" role="button" aria-pressed="true">Add Category</a>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">CategoryName</th>
                                <th scope="col">CategoryImage</th>
                                <th scope="col">Edit </th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach((category, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= category.CategoryName %></td>
                                    

                                    <td>
                                        <% if (category.CategoryImage && category.CategoryImage.length > 0) { %>
                                            <img src="/upload/<%= category.CategoryImage %>" alt="category image" style="height: 40px; width: 40px;">
                                        <% } else { %>
                                        
                                            <span>No Image</span>
                                        <% } %>
                                    </td>
                                    
                                    <td>
                                        <a class="btn btn-success" href="/admin/editcategory/<%= category._id %>">Edit</a>
                                    </td>

                                    <td>
                                        <% if (category.isBlocked) { %>
                                          <!-- Display "Unblock" button if the brand is blocked -->
                                          <form action="/admin/unblockcategory/<%= category._id %>" method="post">
                                            <button type="submit" class="btn btn-danger">Unblock</button>
                                          </form>
                                        <% } else { %>
                                          <!-- Display "Block" button if the brand is not blocked -->
                                          <form action="/admin/blockcategory/<%= category._id %>" method="post">
                                            <button type="submit" class="btn btn-success">Block</button>
                                          </form>
                                        <% } %>
                                      </td>
                                </tr>
                            <% }) %>
                        </tbody>
                        
                        
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function blockUser(CategoryId) {
          console.log('Block user with ID:', CategoryId);
        }
      
        function unblockUser(CategoryId) {
          console.log('Unblock user with ID:',CategoryId);
        }
      </script>
</body>

</html>

<%- include('footer') -%>
