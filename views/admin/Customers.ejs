</head>

<body>
    <%- include('header') -%>

    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/admin/admindash">
                        <i class="fa fa-home"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/product">
                        <i class="fa fa-product-hunt"></i> Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/category">
                        <i class="fa fa-list"></i> Category
                    </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/admin/brand">
                      <i class="fa fa-list"></i> Brands
                  </a>
              </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/customers">
                        <i class="fa fa-users"></i> Customers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/orders">
                        <i class="fa fa-bars"></i> Orders
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/sales">
                        <i class="fa fa-line-chart"></i> Sales
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/logout">
                        <i class="fa fa-sign-out"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

        <!-- /#page-content-wrapper -->
        <div class="container mt-5" style="margin-left: 200px;">
            <div class="row">
                <div class="col-md-8 table-container">
                    <h1 class="use">USER DETAILS</h1>
                    <form action="/admin/userSearch" method="post" name="name">
                        <div class="input-group">
                            <!-- Your form content remains unchanged -->
                        </div>
                    </form>

                    <!-- admin-customers.ejs -->

<table class="table">
  <thead>
    <tr>
      <th>No</th>
      <th>ID</th>
      <th>Username</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach((user, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user._id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <% if (user.isBlocked) { %>
              <!-- Display "Unblock" button if the user is blocked -->
              <form action="/admin/unblock/<%= user._id %>" method="post" onsubmit="return confirm('Are you sure you want to unblock this user?');">
                  <button type="submit" class="btn btn-danger">Unblock</button>
              </form>
          <% } else { %>
              <!-- Display "Block" button if the user is not blocked -->
              <form action="/admin/block/<%= user._id %>" method="post" onsubmit="return confirm('Are you sure you want to block this user?');">
                  <button type="submit" class="btn btn-success">Block</button>
              </form>
          <% } %>
      </td>
      
      </tr>
    <% }); %>
  </tbody>
</table>

                  
                </div>
            </div>
        </div>
    </div>

    <%- include('footer') -%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function blockUser(userId) {
        console.log('Block user with ID:', userId);
      }
    
      function unblockUser(userId) {
        console.log('Unblock user with ID:', userId);
      }
    </script>
    
</body>

</html>
