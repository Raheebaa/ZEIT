        <script>
            $(document).ready(() => {
                $('#addMoneyForm').submit((e) => {
                    e.preventDefault();
                    // Retrieve the amount from the input field
                    const amount = $('#amount').val();

                    // Include the amount in the data to be sent
                    const formData = {
                        amount: amount
                    };
                    $.ajax({
                        type: 'POST',
                        url: '/user/addmoneytowallet',
                        data: formData,
                        success: (response) => {
                            console.log('Server response:', response);

                            if (response.success && response.accountId && response.amount && response.razorpayOrder) {
                                openRazorpay(response); // Pass the entire response to the openRazorpay function
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'Failed to add money to the wallet. Please try again.',
                                });
                            }
                        },
                        error: (err) => {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Failed to add money to the wallet. Please try again.',
                            });

                            console.error('Error adding money:', err);
                        },
                    });
                });
            });

            function openRazorpay(response) {
                const razorpayOrder = response.razorpayOrder;
                const options = {
                    "key": "rzp_test_9oVCk3W2kwsPv6",
                    "amount": razorpayOrder.amount,
                    "currency": razorpayOrder.currency,
                    "name": "zeit",
                    "description": "Test Transaction",
                    "image": "",
                    "order_id": razorpayOrder.id,
                    handler: function (response) {
                        console.log('Payment response:', response);
                        if (response.razorpay_payment_id) {
                            // Call the success callback function with the payment response
                            paymentSuccessCallback(response);
                        }
                    },
                };

                const rzp = new Razorpay(options);
                rzp.open();
            }

            function paymentSuccessCallback(response) {
                // Extract the payment amount from the response
                const paymentAmount = response.amount;

                // Make an AJAX request to update the wallet balance
                $.ajax({
                    type: 'POST',
                    url: '/user/updatewalletbalance',
                    data: { amount: paymentAmount },
                    success: function (result) {
                        if (result.success) {
                            // Show a success message or perform any other actions
                            console.log('Wallet balance updated successfully');
                            // Reload the page to reflect the updated wallet balance
                            window.location.reload();
                        } else {
                            console.error('Failed to update wallet balance:', result.error);
                        }
                    },
                    error: function (err) {
                        console.error('Error updating wallet balance:', err);
                    }
                });
            }
        </script>

