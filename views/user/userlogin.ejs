<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link rel="stylesheet" href="user/css/home.css">
  <style>
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      background-color: #f8f9fa;
    }
  
    .container {
      display: flex;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      border-radius: 10px;
    }
  
    .col-md-6 {
      flex: 1;
      overflow: hidden;
    }
  
    .image-container {
      text-align: center;
      padding: 20px;
    }
  
    .image-wrapper {
      margin-bottom: 20px;
    }
  
    .login {
      padding: 20px;
      width: 100%;
      box-sizing: border-box;
    }
  
    .login-form {
      border-left: 2px solid #ddd;
      padding-left: 20px;
    }
  
    .login-input {
      margin-bottom: 15px;
      width: 100%; /* Full width for responsiveness */
    }
  
    .login-button {
      background-color: #007bff;
      color: #fff;
      width: 100%; /* Full width for responsiveness */
    }
  
    .forgot {
      margin-top: 10px;
    }
  
    /* Responsive styles */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }
  
      .col-md-6 {
        width: 100%;
      }
  
      .login {
        padding: 20px;
        border-top: 2px solid #ddd;
        margin-top: 20px;
      }
    }
  </style>
  
</head>

<body>
  <div class="container">
    <div class="col-md-6">
      <div class="image-container text-center">
        <img src="/assets/wtch.jpeg" class="img-fluid" alt="Sample image" style="width: 100%; max-height: 505px; margin-bottom: 20px;">
      </div>
    </div>

    <!-- Right Column - Form -->
    <div class="col-md-6">
      <div class="login col-md-9 col-lg-6 col-xl-5 text-center">
        
        <div class="login-form">
          <div class="col-md-6">
            <div class="login col-md-9 col-lg-6 col-xl-5 text-center">
              <div class="image-container" style="display: flex; align-items: flex-start; margin-bottom: 10px;">
                <div class="image-wrapper">
                  <img src="/assets/Z.jpg" id="custom-image" class="img-fluid" alt="Sample image" style="width: 50px;">
                </div>
                <div class="d-flex align-items-center ml-2">
                  <span class="h1 fw-bold mb-0">ZEIT</span>
                </div>
              </div>
              <div class="login-form">
                <form action="/login" method="post" class="form1" id="loginForm">
                  <div class="header_text">
                    <h2>Login</h2>
                    <p>Enter your details below</p>
                    <% if(locals.error){ %>
                      <p style="color: red;"><%=error %> </p>
                      <% } %>
                  </div>
                  <div class="inp_l">
                    <input class="login-input" type="text" id="emailInput" name="emailInput" autofocus placeholder="Enter your Email Address">
                    <div class="error-message" id="emailError"></div>
                    <input class="login-input" type="password" id="password" name="password" placeholder="Password">
                    <div class="error-message" id="passwordError"></div>
                  </div>
                  <div class="final">
                    <div class="last">
                      <button class="login-button" type="submit" onclick="submitForm()">
                        Login
                      </button>
                    </div>
                    <p class="forgot"><a href="/forget-pass">Forgot password?</a></p>
                  </div>
                  <p>Don't have an account?<a href="/usersignup">Signup</a></p>
                </form>
              </div>
            </div>
          </div>
          
         


        </div>
      </div>
    </div>
  </div>
  
  <script>
    async function submitForm() {
      const emailInput = document.getElementById('emailInput').value;
      const password = document.getElementById('password').value;
  
  
      if (!emailInput || !password) {
        document.getElementById('error-message').innerText = 'Please fill in all fields.';
        return;
      }

    

      const data = await response.json();
      handleResponse(data);
    }
  
    function handleResponse(response) {
      const errorMessage = document.getElementById('error-message');
      errorMessage.innerText = ''; // Clear previous error messages
  
      if (response.error) {
        // Display the error message in the error box
        errorMessage.innerText = response.error;
      } else {
        // Redirect or perform any other action on successful login
        window.location.href = './user/homepage';
      }
    }
  </script>
  


</body>

</html>
