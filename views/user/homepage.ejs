    <section>
        
        <% if (typeof results !== 'undefined' && results.length > 0) { %>
          
            <div class="container my-5">
                <h2>Search Results for "<%= query %>"</h2>
                <div class="row" style="display: flex; flex-wrap: nowrap; overflow-x: auto;">
                    <% results.forEach(product => { %>
                        <div class="col-md-4" style="flex: 0 0 auto; width: 33.33%;">
                            <div class="card">
                             
                                <a href="/productdetails/<%= product._id %>">
                                    <img src="/upload/<%= product.ProductImage[0] %>" class="card-img-top" alt="<%= product.ProductName %>">
                                </a>
                                    <div class="card-body">
                                        <h5 class="card-title"><%= product.ProductName %></h5>
                                    </div>
                                
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
    
        
        <% } else { %>
    
            <div class="banner1">
                <% if (banners.length > 0) { %>
                    <a href="/product/<%= banners[0].category %>" class="product-link">
                        <img src="/upload/<%= banners[0].imageUrl %>" class="img-fluid" alt="Banner1">
                    </a>
                    <% } %>
            </div>
              
        
                <div class="popcard">
                    <div class="popular increased-font-size d-flex justify-content-center align-items-center fw-bold mb-3">
                        Popular Categories
                    </div>
                </div>
        
                <div class="firstportion">
                    <div class="container" style="padding-top: 60px;">
                        <div class="row row-cols-1 row-cols-md-3 g-3 justify-content-around align-items-center">
                            <% categories.forEach(category=> { %>
                                <% if (!category.isBlocked) { %>
                                    <div class="col">
                                        <div class="card text-center">
                                            <a href="/product/<%= category.CategoryName %>">
                                                <img src="/upload/<%= category.CategoryImage %>" class="card-img-top"
                                                
                                                    alt="<%= category.CategoryName %>">
                                                </a>
                                                <div class="card-body">
                                                    <h5 class="card-title" style="text-decoration: none;color: black;">
                                                        <%= category.CategoryName %>
                                                    </h5>
                                                </div>
                                            
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
