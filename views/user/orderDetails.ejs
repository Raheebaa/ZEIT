    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const returnOrderButtons = document.querySelectorAll('#returnOrderBtn');

        returnOrderButtons.forEach((button) => {
          button.addEventListener('click', () => {
            const orderId = button.getAttribute('data-order-id');
            const itemId = button.getAttribute('data-item-id');

            // Show the modal
            $('#returnOrderModal').modal('show');

            // Handle the confirmation inside the modal
            const confirmReturnBtn = document.getElementById('confirmReturnBtn');
            confirmReturnBtn.addEventListener('click', async () => {
              const returnReason = document.getElementById('returnReason').value;
              const returnDescription = document.getElementById('returnDescription').value;

              try {
                const response = await fetch('/return-order', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                  },
                  body: JSON.stringify({ orderId, itemId, returnReason, returnDescription }),
                });

                if (!response.ok) {
                  throw new Error(`HTTP error! Status: ${response.status}`);
                }

                const data = await response.json();

                if (data.success) {
                  // Order returned successfully, show SweetAlert
                  await Swal.fire({
                    icon: 'success',
                    title: 'Order Returned',
                    text: 'The order has been successfully returned.',
                  });

                  // Hide modal and reload the page
                  $('#returnOrderModal').modal('hide');
                  window.location.reload();
                } else {
                  // Order return failed, show SweetAlert with error message
                  await Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: `Error: ${data.message}`,
                  });
                }
              } catch (error) {
                console.error('Error returning the order:', error);
              }
            });
          });
        });
      });
    </script>
